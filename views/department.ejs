<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About Us - Book My Ambulance (BMA)</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-50">

    <!-- Navbar -->
    <nav class="bg-white shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center py-4">
                <div class="flex items-center">
                    <img src="/images/bma-logo.webp" alt="BMA Logo" class="h-10 w-10 mr-2">
                    <a href="/" class="text-2xl font-bold text-gray-800">Book My Ambulance</a>
                </div>
                <div class="hidden md:flex space-x-4">
                    <a href="/" class="hover:text-blue-500">Home</a>
                    <a href="/about" class="hover:text-blue-500">About Us</a>
                    <a href="/safety" class="hover:text-blue-500">Safety</a>
                    <a href="/user/dashboard" class="hover:text-blue-500">Dashboard</a>
                    <a href="/logout" class="bg-red-500 text-white px-4 py-2 rounded-full hover:bg-red-600">Logout</a>
                </div>
                <!-- Mobile Menu Button -->
                <div class="md:hidden flex items-center">
                    <button id="menu-toggle" class="text-gray-800 focus:outline-none">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                            stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M4 6h16M4 12h16m-7 6h7" />
                        </svg>
                    </button>
                </div>
            </div>
            <!-- Mobile Menu -->
            <div id="mobile-menu" class="md:hidden hidden flex flex-col space-y-2 text-center pb-4">
                <a href="/" class="block hover:text-blue-500">Home</a>
                <a href="/about" class="block hover:text-blue-500">About Us</a>
                <a href="/safety" class="block hover:text-blue-500">Safety</a>
                <a href="/user/dashboard" class="block hover:text-blue-500">Dashboard</a>
                <a href="/logout" class="block bg-red-500 text-white px-4 py-2 rounded-full hover:bg-red-600">Logout</a>
            </div>
        </div>
    </nav>

    <div id="flashMessage" class="fixed top-0 left-0 w-full text-center z-50 transition-opacity duration-500">
        <% if (success_msg) { %>
            <div class="bg-green-100 text-green-800 border border-green-300 py-2 shadow-md">
                <%= success_msg %>
            </div>
        <% } %>
    </div>
    <!-- Department Selection Section -->
    <section id="book" class="py-20">
        <div class="container mx-auto px-4 text-center">
            <h3 class="text-3xl font-bold mb-8">Select a Department</h3>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8 px-2">
                <!-- Department Cards -->
                <form method="get" action="/doctor">
                    <div class="bg-white shadow-lg rounded-lg overflow-hidden p-5">
                        <img src="/images/Dermato.jpg" alt="Dermatology" class="w-full h-40 rounded-lg object-cover">
                        <div class="p-4">
                            <h3 class="text-2xl font-semibold mb-4">Dermatologist</h3>
                            <p class="text-gray-600">Expert doctors for all skin-related treatments and care. Our
                                dermatologists offer world-class services.</p>
                        </div>
                        <input type="hidden" name="department" value="dermatologist">
                        <button type="submit"
                            class="px-3 w-40 py-2 bg-blue-700 text-white shadow-lg rounded-lg hover:shadow-xl transition mt-2">
                            Available Doctors
                        </button>
                    </div>
                </form>

                <!-- Cardiologist -->
                <form method="get" action="/doctor">
                    <div class="bg-white shadow-lg rounded-lg overflow-hidden p-5">
                        <img src="/images/cardio.jpg" alt="Cardiology" class="w-full h-40 rounded-lg object-cover">
                        <div class="p-4">
                            <h3 class="text-2xl font-semibold mb-4">Cardiologist</h3>
                            <p class="text-gray-600">Specialists for heart diseases and cardiovascular care. Providing
                                cutting-edge heart treatments.</p>
                        </div>
                        <input type="hidden" name="department" value="cardiologist">
                        <button type="submit"
                            class="px-3 w-40 py-2 bg-blue-700 text-white shadow-lg rounded-lg hover:shadow-xl transition mt-2">
                            Available Doctors
                        </button>
                    </div>
                </form>

                <!-- Orthopedic -->
                <form method="get" action="/doctor">
                    <div class="bg-white shadow-lg rounded-lg overflow-hidden p-5">
                        <img src="/images/Orthopedic.jpg" alt="Orthopedic" class="w-full h-40 rounded-lg object-cover">
                        <div class="p-4">
                            <h3 class="text-2xl font-semibold mb-4">Orthopedic</h3>
                            <p class="text-gray-600">Best orthopedic doctors for bone and joint care, treating a wide
                                range of musculoskeletal issues.</p>
                        </div>
                        <!-- Hidden field to pass the department -->
                        <input type="hidden" name="department" value="orthopedic">
                        <button type="submit"
                            class="px-3 w-40 py-2 bg-blue-700 text-white shadow-lg rounded-lg hover:shadow-xl transition mt-2">
                            Available Doctors
                        </button>
                    </div>
                </form>

                <!-- Neurologist -->
                <form method="get" action="/doctor">
                    <div class="bg-white shadow-lg rounded-lg overflow-hidden p-5">
                        <img src="/images/Neurologist.jpg" alt="Neurology" class="w-full h-40 rounded-lg object-cover">
                        <div class="p-4">
                            <h3 class="text-2xl font-semibold mb-4">Neurologist</h3>
                            <p class="text-gray-600">Specialized care for the nervous system and brain-related
                                disorders. Expert neurologists at your service.</p>
                        </div>
                        <input type="hidden" name="department" value="neurologist">
                        <button type="submit"
                            class="px-3 w-40 py-2 bg-blue-700 text-white shadow-lg rounded-lg hover:shadow-xl transition mt-2">
                            Available Doctors
                        </button>
                    </div>
                </form>

                <!-- Add other department cards as needed -->
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-white py-4">
        <div
            class="max-w-7xl mx-auto px-4 flex flex-col md:flex-row justify-between items-center text-center md:text-left">
            <p class="text-gray-700">Â© 2024 Book My Ambulance. All rights reserved.</p>
            <div class="mt-4 md:mt-0">
                <a href="/terms" class="text-gray-700 hover:text-blue-600">Terms of Service</a> |
                <a href="/privacy" class="text-gray-700 hover:text-blue-600">Privacy Policy</a>
            </div>
        </div>
    </footer>

    <script>
        document.getElementById("menu-toggle").addEventListener("click", function () {
            const menu = document.getElementById("mobile-menu");
            menu.classList.toggle("hidden");
        });

        document.addEventListener('DOMContentLoaded', function () {
            const flashMessage = document.getElementById('flashMessage');
            if (flashMessage) {
                setTimeout(() => {
                    flashMessage.style.opacity = 0;
                }, 3000); // Hide the flash message after 3 seconds
            }
        });
    </script>

</body>

</html>